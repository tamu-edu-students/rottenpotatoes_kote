<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<%= link_to "New movie", new_movie_path %>

<div id="movies">
  <table>
    <tr>
      <th style="font-weight:bold">Movie</th>
      <th style="font-weight:bold">Rating</th>
      <th style="font-weight:bold">Description</th>
      <th style="font-weight:bold">Release-Date</th>
      <th style="font-weight:bold">Link</th>
      <th style="font-weight:bold">Edit</th>
    </tr>
    <% @movies.each do |movie| %>
      <%= render movie %>
    <% end %>
  </table>
</div>


